generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id Int @id @default(autoincrement())
  league String
  host String
  guest String
  matchDate String
  status String
  timestamp DateTime @default(now())
}

model Odds {
  id Int @id @default(autoincrement())
  matchId Int
  bookmaker String
  oddsHome Float
  oddsDraw Float
  oddsAway Float
  timestamp DateTime @default(now())
}