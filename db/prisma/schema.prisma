generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id        Int         @id @default(autoincrement())
  matchId   String      @unique
  league    String
  host      String
  guest     String
  time      String
  date      String     
  bookmakers Bookmaker[]
  oddsHistory OddsHistory[]
}

model Bookmaker {
  id        Int    @id @default(autoincrement())
  name      String
  oddsHome  String
  oddsDraw  String
  oddsAway  String
  date      String      
  matchId   String
  match     Match  @relation(fields: [matchId], references: [matchId])

  @@unique([matchId, name])
}

model OddsHistory {
  id        Int      @id @default(autoincrement())
  matchId   String
  bookmaker String
  oddsHome  String
  oddsDraw  String
  oddsAway  String
  createdAt DateTime @default(now())
  match     Match    @relation(fields: [matchId], references: [matchId])
}