generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id        Int         @id @default(autoincrement())
  matchId   Int         @unique
  league    String
  host      String
  guest     String
  timeText  String
  bookmakers Bookmaker[]
}

model Bookmaker {
  id        Int    @id @default(autoincrement())
  name      String
  oddsHome  String
  oddsDraw  String
  oddsAway  String
  matchId   Int
  match     Match  @relation(fields: [matchId], references: [matchId])
}